{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true
    },
    {
      "name": "AoC: run on test input",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/solve.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["--day", "12", "--test"]
    },
    {
      "name": "AoC: run on task input",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/src/solve.py",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": ["--day", "12"]
    }
  ]
}
